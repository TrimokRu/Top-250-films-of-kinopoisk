<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Films" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressTint">@color/rating_color</item>
        <item name="android:colorControlNormal">@color/rating_color</item>
        <item name="android:colorControlActivated">@color/rating_color</item>
        <item name="android:progressBackgroundTint">@color/disable_star_color</item>
    </style>

</resources>