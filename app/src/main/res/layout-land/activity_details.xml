<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".presentation.details_activity.DetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detailsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/titleToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Name Movie" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/movieInfoLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="12dp"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/movieImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    tools:srcCompat="@drawable/tools_poster"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/movieNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Name Movie"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="24sp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/movieSloganTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="«Добро пожаловать в реальный мир»"
                    android:textColor="@color/movie_slogan_color"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textAlignment="center"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    app:justifyContent="center"
                    app:flexWrap="wrap"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/details_info_padding"
                        android:id="@+id/movieYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/release_year_movie"
                        android:textColor="@color/movie_details_color"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:padding="@dimen/details_info_padding"
                        android:id="@+id/movieCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/country_movie"
                        android:textColor="@color/movie_details_color"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:padding="@dimen/details_info_padding"
                        android:id="@+id/movieGenre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/genre_movie"
                        android:textColor="@color/movie_details_color"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:padding="@dimen/details_info_padding"
                        android:id="@+id/movieAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/age_movie"
                        android:textColor="@color/movie_details_color"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:padding="@dimen/details_info_padding"
                        android:id="@+id/movieRatingKinopoisk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/rating_kinopoisk_movie"
                        android:textColor="@color/movie_details_color"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:padding="@dimen/details_info_padding"
                        android:id="@+id/movieLength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/length_movie"
                        android:textColor="@color/movie_details_color"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textAlignment="center"/>
                </com.google.android.flexbox.FlexboxLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_movie"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/movieDescriptionTextView"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/movie_description_color"
                    android:fontFamily="@font/roboto_regular"
                    tools:text="@tools:sample/lorem/random"
                    android:paddingBottom="40dp"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>